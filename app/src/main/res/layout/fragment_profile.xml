<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/google_blue"/>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/mancungpict"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp" />

    <TextView
        android:id="@+id/deskripsiprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REIHAN WIYANDA"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/google_grey"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/bagian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deskripsiprof"
        android:layout_centerHorizontal="true"
        android:text="Developer"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/profile_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bagian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/source_sans_pro"
        android:padding="20dp"
        android:text=" NAMA\n REIHAN WIYANDA"
        android:textColor="@color/google_grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:fontFamily="@font/source_sans_pro"
        android:padding="20dp"
        android:text=" NIM\n 10119011"
        android:textColor="@color/google_grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_nim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:fontFamily="@font/source_sans_pro"
        android:padding="20dp"
        android:drawablePadding="20dp"
        android:text=" KELAS\n IF-1"
        android:textColor="@color/google_grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" EMAIL\n reihanwiyanda@gmail.com"
        android:textStyle="bold"
        android:drawablePadding="20dp"
        android:layout_below="@id/profile_kelas"
        android:background="@drawable/back"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/source_sans_pro"
        android:textColor="@color/google_grey"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>