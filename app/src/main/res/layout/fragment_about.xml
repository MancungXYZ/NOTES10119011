<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <ImageView
        android:id="@+id/tentang"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_app" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aplikasi"
        android:text="Tentang Aplikasi"
        android:textSize="30dp"
        android:layout_below="@id/tentang"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/aplikasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Aplikasi ini dibuat untuk memenuhi salah satu tugas Aplikasi Komputasi Bergerak" />

    <TextView
        android:id="@+id/versi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aplikasi"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Version 1.0.0" />
</RelativeLayout>